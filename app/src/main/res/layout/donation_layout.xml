<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_corner_background">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:id="@+id/image"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/moon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/colorPrimary"

        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Prudence Oatlhotse"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/image"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"

        android:text="Contact: 75767473"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickup_time"
    android:layout_alignParentRight="true"
 android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/orange_swanky_background"
        android:text="12:00 am"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickup_volunteer"
        android:layout_below="@+id/image"

        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Pick up: Semang mang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"

        android:layout_below="@+id/pickup_volunteer"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"

        android:textColor="@color/colorOrange"
        android:text="Tlokweng,Nkaikela ward by choppies.Plot 3467"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/items_text"

        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/location"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="8dp"
        android:text="Maize meal 10kg, rice 10kg,2kg sugar,peanut butter,salt,butternuts"/>
</RelativeLayout>